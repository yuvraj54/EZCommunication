<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuvraj.navigationdrawer.Profile">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="413dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/signing"
                    android:elevation="5dp"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/tvuniversity"
                    android:drawableLeft="@drawable/ic_enroll"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="University"
                    android:textColorHint="#a3a1a1" />

                <TextView
                    android:id="@+id/tvcollage"
                    android:drawableLeft="@drawable/ic_enroll"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="Collage"
                    android:textColorHint="#a3a1a1" />

                <TextView
                    android:id="@+id/tvbranch"
                    android:drawableLeft="@drawable/ic_enroll"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="Branch"
                    android:textColorHint="#a3a1a1" />

                <TextView
                    android:id="@+id/tvenrollment"
                    android:drawableLeft="@drawable/ic_enroll"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="Enrollment Number"
                    android:textColorHint="#a3a1a1" />

                <TextView
                    android:id="@+id/tvname"
                    android:drawableLeft="@drawable/ic_user"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="Name"
                    android:textColorHint="#a3a1a1" />


                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_login"
                    android:drawableLeft="@drawable/ic_enroll"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="#a3a1a1" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_login"
                    android:drawableLeft="@drawable/ic_phone_android"
                    android:drawablePadding="10dp"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="#a3a1a1" />

                <EditText
                    android:id="@+id/edt_mac"
                    android:drawableLeft="@drawable/ic_mac"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:hint="MAC Address"
                    android:textColorHint="#a3a1a1" />



                <EditText
                    android:id="@+id/edt_pass"
                    android:drawableLeft="@drawable/ic_password"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Password"
                    android:textColorHint="#a3a1a1" />



                <Button
                    android:id="@+id/btnsubmit"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_signin"
                    android:padding="10dp"
                    android:drawablePadding="-25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login"
                    android:text="Update Profile"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>
