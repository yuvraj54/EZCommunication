<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuvraj.navigationdrawer.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_login"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EZ Login"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tower"
            android:elevation="5dp"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/uname"
                android:drawableLeft="@drawable/ic_user"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/edittext_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:hint="User Name"
                android:textColorHint="#a3a1a1" />

            <EditText
                android:id="@+id/pwd"
                android:drawableLeft="@drawable/ic_password"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#a3a1a1" />

            <EditText
                android:id="@+id/ip"
                android:drawableLeft="@drawable/ic_wifi"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Host IP"
                android:textColorHint="#a3a1a1" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_signin"
                android:padding="10dp"
                android:drawablePadding="-25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <Button
                android:id="@+id/btnsignup"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/signup"
                android:text="Get User Name and Password"
                android:textColor="#f52f5d"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bluegrass" />

        </LinearLayout>




    </LinearLayout>
    
</RelativeLayout>
